{
  "name": "monorepo-semantic-release",
  "version": "0.0.0-development",
  "description": "Baseline for a typescript monorepo with typedoc, semantic-release etc",
  "main": "index.js",
  "workspaces": [
    "packages/**"
  ],
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build:umd": "lerna run build:umd",
    "build": "lerna run build",
    "c": "git-cz",
    "clean": "npm run clean:src && npm run clean:dist && npm run docs:clean",
    "clean:src": "rimraf packages/*/{src,test}/*.{d.ts,js,js.map} && rimraf packages/*/{src,test}/**/*.{d.ts,js,js.map}",
    "clean:dist": "rimraf packages/*/dist/ && rimraf packages/*/.rpt2_cache",
    "deepclean": "rimraf packages/*/node_modules && npm run clean && rimraf ./node_modules",
    "docs:build": "npm run docs:clean && npm run docs:typedoc",
    "docs:clean": "rimraf docs/build",
    "docs:deploy": "npm run docs:build && node scripts/deploy-doc-site.js",
    "docs:typedoc": "typedoc",
    "lint": "eslint ./packages --ext .ts",
    "lint:fix": "tslint --project tsconfig.json --exclude '**/*.d.ts' --fix",
    "postinstall": "yarn bootstrap",
    "prettify": "prettier --write --parser typescript --tab-width 2 --use-tabs false \"packages/**/+(src|test)/**/*.ts\"",
    "test:browsers": "karma start --single-run --browsers Chrome,Firefox,Edge",
    "test:ci": "npm run test:node && npm run test:chrome:ci && npm run test:firefox",
    "test:chrome:ci": "karma start --single-run --browsers ChromeHeadlessCI karma.conf.js",
    "test:chrome:debug": "karma start --auto-watch --no-single-run --browsers=Chrome",
    "test:chrome": "karma start --single-run --browsers=Chrome",
    "test:edge": "karma start --single-run --browsers=Edge",
    "test:firefox": "karma start --single-run --browsers=Firefox",
    "test:node:debug": "inspect jasmine --config=jasmine.json",
    "test:node": "jasmine --config=jasmine.json",
    "test": "npm run lint && npm run test:node && npm run test:chrome",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "monorepo",
    "yarn",
    "semantic-release",
    "typescript",
    "typedoc"
  ],
  "author": "dbouwman@esri.com",
  "license": "Apache-2.0",
  "devDependencies": {
    "@chiragrupani/karma-chromium-edge-launcher": "^2.0.0",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@commitlint/config-lerna-scopes": "^11.0.0",
    "@commitlint/prompt": "^11.0.0",
    "@jedmao/semantic-release-npm-github-config": "^1.0.9",
    "@rollup/plugin-commonjs": "^15.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@types/fetch-mock": "^7.3.2",
    "@types/jasmine": "^3.5.11",
    "@types/node": "^10.17.0",
    "@types/sinon": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "codecov": "^3.8.0",
    "commitizen": "^4.2.1",
    "cz-conventional-changelog": "^3.3.0",
    "cz-lerna-changelog": "^2.0.3",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.12.0",
    "gh-pages": "^3.1.0",
    "husky": "^4.3.0",
    "jasmine": "^3.6.1",
    "karma": "^5.2.3",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage": "^2.0.3",
    "karma-firefox-launcher": "^1.3.0",
    "karma-jasmine": "^4.0.1",
    "karma-jasmine-diff-reporter": "^2.0.0",
    "karma-safari-launcher": "^1.0.0",
    "karma-spec-reporter": "^0.0.32",
    "karma-typescript": "^5.2.0",
    "karma-typescript-es6-transform": "^5.2.0",
    "lerna": "^3.22.1",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.29.0",
    "rollup-plugin-filesize": "^9.0.2",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.27.3",
    "semantic-release": "^17.2.1",
    "sinon": "^9.2.0",
    "ts-node": "^9.0.0",
    "tsdoc": "^0.0.4",
    "typedoc": "^0.19.2",
    "typedoc-plugin-external-module-name": "^4.0.3",
    "typedoc-plugin-pages": "^1.0.1"
  },
  "dependencies": {
    "isomorphic-fetch": "^2.2.1",
    "isomorphic-form-data": "^2.0.0",
    "typescript": "^4.0.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-lerna-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dbouwman/monorepo-semantic-release.git"
  }
}
